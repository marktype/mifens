<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/middle_margin_left"
    android:layout_marginRight="@dimen/middle_margin_right"
    android:background="@color/common_white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/middle_margin_left"
        android:layout_marginRight="@dimen/middle_margin_right"
        android:layout_marginTop="@dimen/middle_margin_top" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/ordernumber" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/obligation"
            android:textColor="@color/background" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/middle_margin_left"
        android:layout_marginRight="@dimen/middle_margin_right"
        android:layout_marginTop="@dimen/middle_margin_top" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:src="@drawable/img14" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_margin_left"
            android:text="大衣"
            android:textSize="@dimen/common_size3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/middle_margin_left"
        android:layout_marginRight="@dimen/middle_margin_right"
        android:layout_marginTop="@dimen/middle_margin_top" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/paystype" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="支付金额：599" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="@dimen/middle_margin_left"
        android:layout_marginRight="@dimen/middle_margin_right"
        android:layout_marginTop="@dimen/middle_margin_top"
        android:gravity="right" >

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/background"
            android:text="@string/shengyutime" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/background"
            android:text="24:16" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/padding2"
            android:background="@drawable/shape_button3"
            android:text="@string/cancelorder"
            android:textSize="@dimen/common_size2" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_button"
            android:text="@string/pay"
            android:textSize="@dimen/common_size2" />

    </LinearLayout>

</LinearLayout><!-- From: file:/D:/androidstudioProject/mifen21/app/src/main/res/layout/order_list_daifukuan_adapter.xml -->