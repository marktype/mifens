<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="@color/background" >

        <ImageView
            android:id="@+id/myself_collection_history_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_marginLeft="@dimen/sign_margin_right"
            android:layout_weight="0.5"
            android:src="@drawable/arrow2" />

        <TextView
            android:id="@+id/textChangge"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:text="@string/mainpage"
            android:textColor="@color/common_white"
            android:textSize="@dimen/common_text_size" />

        <TextView
            android:id="@+id/myself_collection_history_delete_titletv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_marginRight="@dimen/sign_margin_right"
            android:layout_weight="0.5"
            android:textColor="@color/common_white"
            android:visibility="gone"
            android:text="@string/cancel" />
        <ImageView
            android:id="@+id/myself_collection_history_delete_titleim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_marginRight="@dimen/sign_margin_right"
            android:layout_weight="0.5"
            
            android:src="@drawable/delete_03" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <GridView
            android:id="@+id/myself_collection_grivideview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:horizontalSpacing="@dimen/small_margin_left"
            android:numColumns="2" >
        </GridView>

        <LinearLayout
            android:id="@+id/myself_collection_history_delete_lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/mengcheng"
            android:gravity="right"
            android:visibility="gone"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/collection_history_select_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/middle_margin_right"
                android:layout_weight="1"
                android:button="@drawable/btn_radio_pay"
                android:text="@string/allselect"
                android:textColor="@color/common_white" />

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/middle_margin_right"
                android:background="@drawable/shape_button"
                android:text="@string/delete"
                android:textColor="@color/common_white" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
