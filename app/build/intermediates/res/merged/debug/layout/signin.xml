<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_grey"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sign_margin_bottom"
        android:layout_marginTop="@dimen/sign_margin_top"
        android:background="@color/common_white"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/signin_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:ems="10"
            android:hint="@string/hint_signin_user" >

            <requestFocus />
        </EditText>

        <include
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/line_margin_left"
            layout="@layout/line" />

        <EditText
            android:id="@+id/signin_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:ems="10"
            android:hint="@string/hint_signin_password" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <Button
            android:id="@+id/sign_login_btn"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:background="@drawable/shape_button"
            android:text="@string/signin"
            android:focusableInTouchMode="false"
            android:textColor="@color/common_white" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/sign_margin_top"
            android:gravity="right"
            android:text="@string/forgetpassword"
            android:textSize="@dimen/sign_textsize_forgetpassword" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linformore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:focusable="true"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout><!-- From: file:/D:/androidstudioProject/mifen21/app/src/main/res/layout/signin.xml -->