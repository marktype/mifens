<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/classify_lin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/background" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@color/common_white"
            android:focusable="true"
            android:focusableInTouchMode="true" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/search" />

            <EditText
                android:id="@+id/home_page_seachcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:ems="10"
                android:focusable="false"
                android:gravity="center_vertical"
                android:hint="@string/content4"
                android:maxLength="15"
                android:textColor="@color/common_grey"
                android:textSize="12sp" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/page_margin_width"
            android:layout_marginRight="@dimen/page_margin_width"
            android:layout_weight="4"
            android:background="@color/background"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/common_white" />
    </LinearLayout>

    <com.ymhd.mifei.tool.MyRelativeLayout
        android:id="@+id/seach_rela_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/lin_storagerack2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <ListView
                android:id="@+id/listview_classify"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:layout_weight="0.3"
                android:divider="#888888"
                android:scrollbars="none"
                android:dividerHeight="0.5dp" >
            </ListView>

            <ListView
                android:id="@+id/listview_commoditylist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:layout_weight="0.2"
                android:background="#fafafa"
                android:divider="#cccccc"
                android:scrollbars="none"
                android:dividerHeight="0.5dp" >
            </ListView>
        </LinearLayout>

        <ListView
            android:id="@+id/listview_activity1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
             >
        </ListView>
    </com.ymhd.mifei.tool.MyRelativeLayout>

</LinearLayout>